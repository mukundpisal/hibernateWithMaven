<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "com.hibernatewith.maven.hibernatedemo1.student1" table = "student1">
      
      <meta attribute = "class-description">
         This class contains the employee detail. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "name" column = "student_name" type = "string"/>
      <property name = "branch" column = "student_branch" type = "string"/>
      <property name = "year" column = "Student_year" type = "int"/>
      
   </class>
</hibernate-mapping>